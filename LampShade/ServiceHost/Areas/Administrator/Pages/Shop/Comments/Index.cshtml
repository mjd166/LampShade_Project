
@page
@model ServiceHost.Areas.Administrator.Pages.Shop.Comments.IndexModel
@{
}
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت  نظرات";
}

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست نظرات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>ایمیل</th>
                                    <th>نام محصول </th>
                                    <th>پیام</th>
                                    <th>تاریخ تولید</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Comments)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                       
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Message</td>
                                        <td>@item.CreationDate</td>
                                        
                                        <td class="text-center">
                                            @if (item.IsCanceled)
                                            {
                                                <span class="text-danger">کنسل شده</span>
                                            }
                                            @if (!item.IsCanceled && !item.IsConfirm)
                                            {
                                                <span class="text-warning">در انتظار</span>
                                            }

                                            @if (!item.IsCanceled && item.IsConfirm)
                                            {
                                                <span class="text-success">تایید شده</span>
                                            }
                                        </td>


                                       

                                        <td>
                                            <a class="btn btn-danger waves-effect waves-light m-l-10" asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id">
                                                کنسل
                                            </a>
                                            @if ( !item.IsConfirm)
                                            {
                                              
                                                <a class="btn btn-success waves-effect waves-light m-l-10" asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id">
                                                    تایید
                                                </a>
                                            }
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
