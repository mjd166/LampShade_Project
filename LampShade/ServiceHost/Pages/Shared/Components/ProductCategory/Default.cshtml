@using _01_LampshadeQuery.Contracts.ProductCategory
@model List<ProductCategoryQueryViewModel>
<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout">
                        @foreach (var productcategory in Model)
                        {
                            <div class="col-lg-4 col-sm-6 grid-item">
                              
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory" asp-route-Id="@productcategory.Slug">
                                            <img src="@productcategory.Picture"  class="img-fluid" alt="@productcategory.PictureAlt" title="@productcategory.PictureTitle" >
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@productcategory.Name</h3>
                                        <a asp-page="/ProductCategory" asp-route-Id="@productcategory.Slug">
                                            <i class="ion-android-arrow-dropleft-circle"></i>  خرید
                                        </a>
                                    </div>
                                </div>
                            
                            </div>
                        }


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>